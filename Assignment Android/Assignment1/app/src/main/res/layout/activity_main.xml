<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:gravity="left"
            android:background="#000000">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="2in"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="3dp"
                android:background="#CF0A0A" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv1"
                android:layout_marginTop="3dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:background="#FCE700" />
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="#000000">
            <TableRow>
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1.4in"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="3dp"
                    android:background="#EA047E" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tv4"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_height="1.4in"
                    android:layout_marginBottom="3dp"
                    android:background="#C47AFF" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="match_parent"
                    android:layout_height="1.25in"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="#C8FFD4" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <SeekBar
        android:id="@+id/slider"
        android:layout_weight="0.05"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</LinearLayout>